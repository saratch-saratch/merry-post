generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Migrations
model Job {
  id        Int     @id @default(autoincrement())
  jobName   String
  color     String
  users   User[]
}

model User {
  id          String      @id @default(uuid())
  username    String      @unique
  email       String      @unique
  password    String
  displayName String
  jobId       Int
  job         Job         @relation(fields: [jobId], references: [id])
  posts       Post[]
  comments    Comment[]
}

model Post {
  id          String      @id @default(uuid())
  userId      String
  title       String
  description String
  link        String?
  createdAt   DateTime    @default(now())
  lastModified    DateTime?
  user        User        @relation(fields: [userId], references: [id])
  comments    Comment[]
}

model Comment {
  id          String      @id @default(uuid())
  userId      String
  postId      String
  message     String
  createdAt   DateTime    @default(now())
  user        User        @relation(fields: [userId], references: [id])
  post        Post        @relation(fields: [postId], references: [id])
}

